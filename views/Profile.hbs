    <body>
         <div class="navbar navbar-light">
            
            <image src="/public/images/ssbulogo.png" class="navbar-brand" alt="brand logo">
            
            <form class="form-inline" method="post" id="searchform">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" name="search" id="searchBar">
                <!-- <img src="/public/images/icons/search.svg" id="searchIcon" type="submit"> -->
                <input type="image" src="/images/icons/search.svg" alt="Submit" id="searchIcon">
            </form>

            <div class="btn-group" role="group" aria-label="Basic example" >          
                <button type="button" class="btn  btn-outline-dark" onclick="location.href='/profile/{{username}}';" id="prof">
                    <img src="{{profilePic}}" id="displayPic">
                    {{name}}
                </button>
                <button type="button" class="btn btn-ss btn-outline-dark" id="btn-Home">Home</button>
                
                <div class="dropdown">
                <button class="btn dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item " href="/Notification">
                        <img src="/images/icons/bell2.svg" id="notifIcon" class="dropIcon"> 
                        Notifications
                    </a>
                    <a class="dropdown-item" href="/EditProfile">
                        <img src="/images/icons/edit-32.svg" id="editIcon" class="dropIcon"> 
                        Edit Profile
                    </a>
                    <a class="dropdown-item" href="/SavedFollowed">
                        <img src="/images/icons/bookmark2.svg" id="savedIcon" class="dropIcon"> 
                        Saved and Followed
                    </a>
                    <a class="dropdown-item" href="/getLogout">
                        <img src="/images/icons/power.svg" id="savedIcon" class="dropIcon"> 
                        Log-out
                    </a>
                </div>
            </div>  
            </div>

               
        </div>
        
        <div id="container" >
            <div id="div1"></div>
            <div id="div2">
                <h1 id="pageTitle">Profile</h1>
                <div id="woymCard" class="profCard">
                    <img src="{{pprofilePic}}" id="profPic">
                    <div id="walaGanap">
                        <h4>{{pname}}</h4>
                        <label id="viewNickName">@{{pusername}}</label><br>
                        <b><label>Nintentdo ID:&nbsp;</label></b><label id="viewNinId">{{puserid}}</label><br>
                            <b><label>Main/s:&nbsp;</label></b>
                                <label id="viewMains">
                                {{pmain}}
                                </label><br>
                            <b>
                                <label>Secondary/s:&nbsp;</label></b><label id="viewSeconds">
                                 {{psecondary}}
                                </label><br>
                    </div>
                </div>
                <div id="ppp" class="profilesort">
                            <div id="sorter">
                                Sort By:                                
                                
                                <button type="button" class="btn btn-comment">
                                    <image src="/images/icons/thumbs-up.svg">
                                    Like
                                </button>
                                <button type="button" class="btn btn-comment">
                                    <image src="/images/icons/thumbs-down.svg">
                                    Dislike
                                </button>
                                <button type="button" class="btn btn-comment">
                                    <image src="/images/icons/plus-circle.svg">
                                    Newest
                                </button>
                                
                            </div>
                 </div>  
                
                <div id="divCon2" class="divcon2">

{{#each posts}}
                <div id="newsContainer" onclick="location.href='/post/{{_id}}';">
                    <div class="extra">
                        <label id="nfPoster">posted by/ <img src="{{postusericon}}" id="postusericon">  <a href="/Profile/{{postbyName}}" class="profLink">@{{postbyName}}</a> {{postDate}} {{postTime}}</label>
                        <h3 id="newTitle">{{this.postTitle}}</h3>
                        <p id="newsContent">
                            {{this.content}}
                        </p>
    {{#each this.image}}
                        <image id="postImage" class="nfPic" src="{{this.img}}">
    {{/each}}
                    </div>
                    
                    <div class="btn-group nfButtons"  role="group" aria-label="Basic podt functions">
                        <button type="button" class="btn btn-icon" id="like">
                            <image src="/images/icons/thumbs-up.svg" class="postIcons">
                        </button>
                        {{nLikes}}
                        <button type="button" class="btn btn-icon" id="dislike">
                            <image src="/images/icons/thumbs-down.svg" class="postIcons">
                        </button>
                        {{nDislikes}}
                        <button type="button" class="btn btn-icon" id="commentButton">
                            <image src="/images/icons/message-square.svg" class="postIcons">
                        </button>
<!--                         <button type="button" class="btn btn-icon" id="bookmark">
                            <image src="/images/icons/bookmark2.svg" class="postIcons">
                        </button>
                        <button type="button" class="btn btn-icon" id="follow">
                            <image src="/images/icons/bell2.svg" class="postIcons">
                        </button> -->
                    </div>
                </div>



{{/each}}




